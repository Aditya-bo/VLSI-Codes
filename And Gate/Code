// Data flow modelling

module and_gate(a,b,y);
input a,b:
outpur y;
assign y=a&b;
endmodule

// Gate level modelling or Structural Modelling

module and_gate(a,b,y)
input a,b;
output y;
and A(y,a,b);
endmodule

// Behavioural Modelling

module and_gate(a,b,y);
input a,b:
output y;
always @(*)
y=a&b;
endmodule

or

module and_gate(a,b,y);
input a,b:
output y;
always @(a or b) begin
if (a==1 & b==1) begin
y=1;
end
else
y=0;
end
endmodule
