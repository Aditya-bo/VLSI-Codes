// Data flow modelling

module xnor_gate(a,b,y);
input a,b;
output y;
assign y = ~(a^b);
endmodule

//Gate Level Modelling

module xnor_gate(a,b,y);
input a,b;
output y;
xnor A(y,a,b);
endmoudule


// Behavioural Modelling

module xnor_gate(a,b,y)
inout a,b;
output y;
always @(*)
y= ~(a^b);
endmodule

or

module xnor_gate(a,b,y)
input a,b;
ouput y;
always @(a or b) begin
if (a=0 & b=0) begin
y=1;
end
else if (a=1 & b=1) begin
y=1;
end
else
begin
y=0;
end
endmodule
