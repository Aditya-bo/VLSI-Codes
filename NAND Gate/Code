// Data Flow Modelling

module nand_gate(a,b,y);
input a,b;
output y;
assign y = ~(a&b);
endmodule


// Gate Level Modelling

module nand_gate(a,b,y);
input a,b;
output y;
nand A(y,a,b);
endmodule

// Behavioural Modelling

module nand_gate(a,b,y);
input a,b;
output y;
always @(*)
y= ~(a&b);
endmodule

or

module nand_gate(a,b,y);
input a,b;
output y;
always @(a or b) begin
if (a=1 & b=1) begin
y=0;
end
else
y=1;
end
endmodule

