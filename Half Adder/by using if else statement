module half_adder(a,b,sum,cout);
input a,b;
output reg sum,cout;
always @ (a or b)
begin
if ( a==0 & b==0) begin
  sum = 0;
  cout = 0; end
  else if ( a==0 & b==1) begin
  sum = 1;
  cout = 0;
  end
  else if ( a==1 & b==0) begin 
  sum = 1;
  cout = 0;
  end
  else if (a==1 & b==1) begin
  sum = 1;
  cout = 1;
  end
  end
  endmodule
