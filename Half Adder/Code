// Data flow modelling

module HA(a,b,sum,carry);
input a,b;
ouput sum , carry;
assign sum = a^b;
assign carry = a&b;
endmodule

//Gate level modelling

module HA(a,b,sum,carry);
input a,b;
ouput sum , carry;
xor A(sum,a,b);
and B(carry, a,b);
endmodule


//Behavioural Modelling

module HA(a,b,sum,carry);
input a,b;
ouput sum , carry;
always @(*)
sum = a^b;
carry = a&b;
endmodule

or

module HA(a,b,sum,carry);
input a,b;
ouput sum , carry;
always @(a or b) begin
if (a=b) begin
sum
