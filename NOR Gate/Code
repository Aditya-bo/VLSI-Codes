// Data flow modelling

module nor_gate(a,b,y);
input a,b:
outpur y;
assign y= ~(a | b);
endmodule

// Gate level modelling

module nor_gate(a,b,y)
input a,b;
output y;
or A(y,a,b);
endmodule

// Behavioural Modelling

module nor_gate(a,b,y);
input a,b:
output y;
always @(*)
y= ~(a | b);
endmodule

or

module or_gate(a,b,y);
input a,b:
output y;
always @(a or b) begin
if (a==0 & b==0) begin
y=1;
end
else
y=0;
end
endmodule
